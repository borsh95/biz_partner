	<script>
		for (const component of document.querySelectorAll('[data-component]')) {
			component.setAttribute('uk-tooltip', "Copy html");
		}

		document.addEventListener('click', function(e) { 
			if (e.target.closest('[data-component]')) {
				const elem = e.target.closest('[data-component]');
				const copyElem = elem.cloneNode(true);
				['uk-tooltip', 'data-component', 'aria-expanded', 'title'].forEach(attr => copyElem.removeAttribute(attr));

				navigator.clipboard.writeText(copyElem.outerHTML);

				UIkit.notification({
					message: 'The html of the component is copied',
					status: 'primary',
					pos: 'top-right',
					timeout: 5000
				});	
			}
		})
